<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

    <TextView
            android:text="This is message that can't stay in one line which is very bad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_from_row"
            android:background="@drawable/rounded_editext_register_login"
            android:padding="16dp"
            android:maxWidth="240dp"
            app:layout_constraintStart_toEndOf="@+id/imageview_chat_from_row"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/white"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageview_chat_from_row" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            tools:srcCompat="@tools:sample/backgrounds/scenic[0]"/>
</android.support.constraint.ConstraintLayout>